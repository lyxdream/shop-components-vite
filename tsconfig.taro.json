{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./tsc/type",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/taro.build.ts",
    "src/**/*.ts", 
    "src/**/*.d.ts",
    "src/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.vue"
    ],
  "exclude": ["node_modules"]
}
